{
  "name": "@beynd/commitizen-config",
  "version": "1.2.2",
  "description": "Centralized Commitizen + Husky setup for all Beynd microservices",
  "main": "index.js",
  "files": [
    ".czrc",
    "commitlint.config.js",
    "scripts",
    "index.js"
  ],
  "dependencies": {
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.0"
  },
  "scripts": {
    "postinstall": "node ./scripts/setup-husky.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "http://localhost:8081/repository/npm-internal/"
  }
}
